{
  "name": "@dr-kobros/hardcore-react-training",
  "version": "3.0.0",
  "description": "An example / training project broilerplate utilizing React et al.",
  "main": "src",
  "scripts": {
    "clean": "rimraf ./dist",
    "build:client": "NODE_ENV=production webpack --progress",
    "build:server": "NODE_ENV=production webpack --config webpack.config.server.babel.js --progress",
    "build": "yarn run clean && yarn run build:client && yarn run build:server",
    "lint": "eslint src --ext js",
    "babel-node": "babel-node",
    "start": "NODE_ENV=development ./node_modules/.bin/nodemon --exec yarn run babel-node -w src/dev.js -- src/dev.js",
    "dev:server": "NODE_ENV=development ./node_modules/.bin/webpack --config=webpack.config.server.babel.js --watch --progress",
    "test": "NODE_ENV=test mocha --compilers js:babel-register -r ignore-styles -r jsdom-global/register \"./src/**/*.tests.js\"",
    "flow": "flow",
    "serve": "nodemon -w dist/server.js dist/server.js",
    "api": "NODE_ENV=development ./node_modules/.bin/nodemon --exec yarn run babel-node -w src/api.js -- src/api.js",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pekkis/react-training-broilerplate"
  },
  "keywords": [
    "React",
    "example",
    "boilerplate",
    "broilerplate",
    "training"
  ],
  "author": "Pekkis",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@dr-kobros/react-webfont-loader": "^2.0",
    "axios": "^0.15.3",
    "classnames": "^2.2.5",
    "immutable": "^3.8.1",
    "react": "^15.4.1",
    "react-addons-perf": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-fa": "^4.1.2",
    "react-gravatar": "^2.6.1",
    "react-helmet": "^4.0.0",
    "react-immutable-proptypes": "^2.1.0",
    "react-intl": "^2.2.3",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "recompose": "^0.22.0",
    "redbox-react": "^1.3.3",
    "redial": "^0.5.0",
    "redux": "^3.6.0",
    "redux-promise-middleware": "^4.2.0",
    "redux-thunk": "^2.1.0",
    "uuid": "^3.0.1",
    "webfontloader": "^1.6.27"
  },
